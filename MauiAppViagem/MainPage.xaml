<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppViagem.MainPage"
             Title="Pedágio">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="VerticalOptions" Value="FillAndExpand"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Origem: "/>
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino: "/>
            <Entry x:Name="txt_destino"/>

            <Label Text="Distância: "/>
            <Entry x:Name="txt_distancia"/>

            <Label Text="Rendimento: "/>
            <Entry x:Name="txt_rendimento"/>

            <Label Text="Preço da Gasolina: "/>
            <Entry x:Name="txt_gasolina"/>

            <Button x:Name="btn_AddPedagio" Text="Adicionar Pedágio" Clicked="btn_AddPedagio_Clicked" HorizontalOptions="Center" Margin="10"/>
            <Button x:Name="btn_Calcular" Text="Calcular" Clicked="btn_Calcular_Clicked" HorizontalOptions="Center" Margin="10" />
            <Button x:Name="btn_ListaPedagio" Text="Lista do Pedágio" Clicked="btn_ListaPedagio_Clicked" HorizontalOptions="Center" Margin="10" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
